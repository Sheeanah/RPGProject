<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rpgproject.rpgproject" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ForestActivity"
            android:label="@string/title_activity_forest" >
        </activity>
        <activity
            android:name=".MineActivity"
            android:label="@string/title_activity_mine" >
        </activity>
        <activity
            android:name=".ShopActivity"
            android:label="@string/title_activity_shop" >
        </activity>
        <activity
            android:name=".ArenaActivity"
            android:label="@string/title_activity_arena" >
        </activity>
    </application>

</manifest>
